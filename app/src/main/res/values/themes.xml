<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidBeginnerFP" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimaryContainer</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondaryContainer</item>
        <!-- Status bar color. -->
    </style>

    <style name="TextContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContent.TitleMedium">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.TitleLarge">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.Subtitle">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    
    <style name="PriceText">
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
    </style>

    <style name="BackgroundPrice">
        <item name="android:background">@color/md_theme_light_primaryContainer</item>
    </style>

    <style name="Image.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="CircleImage">
        <item name="android:scaleType">centerCrop</item>
        <item name="civ_border_width">4dp</item>
        <item name="civ_border_color">@color/md_theme_light_primary</item>
    </style>

    <style name="Theme.AndroidBeginnerFP" parent="Base.Theme.AndroidBeginnerFP" />
</resources>

